<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="CalendarioAzul" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/azul_projeto</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/azul_projeto</item>

        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <item name="android:colorForeground">@color/branco</item>
    </style>

    <style name="alertaAzul" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/azul_projeto</item>
        <item name="android:background">@color/cinzaEscuroA</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

</resources>
