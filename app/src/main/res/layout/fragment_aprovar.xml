<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_botao_dash"
    android:orientation="vertical"
    android:padding="15dp">

    <Button
        android:id="@+id/bt_AprovarFragment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rounded_button_confirm"
        android:text="Aprovar"
        android:textColor="@color/branco"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_RecusarFragment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button_cancel"
        android:text="Recusar"
        android:textColor="@color/branco"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_CancelarFragment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button_padrao"
        android:text="Cancelar"
        android:textColor="@color/branco"
        android:textStyle="bold" />
</LinearLayout>