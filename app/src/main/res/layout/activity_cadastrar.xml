<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preto"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fundo_tela_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grandient_fundo_login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp">+

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:text="LOGO"
                android:textAlignment="center"
                android:textColor="@color/branco"
                android:textSize="56sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="NOME"
                android:textColor="@color/azul_projeto"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="NOME" />

            <EditText
                android:id="@+id/etNomeCadastrar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="@color/branco"
                android:ems="10"
                android:hint="Ex. Maria"
                android:inputType="text"
                android:textColor="@color/branco"
                android:textColorHint="@color/cinza"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="EMAIL"
                android:textColor="@color/azul_projeto"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="EMAIL" />



            <EditText
                android:id="@+id/etEmailCadastrar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="@color/branco"
                android:ems="10"
                android:hint="email@email.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/branco"
                android:textColorHint="@color/cinza"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="SENHA"
                android:textColor="@color/azul_projeto"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSenhaCadastro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="@color/branco"
                android:ems="10"
                android:hint="*************"
                android:inputType="textPassword"
                android:textColor="@color/branco"
                android:textColorHint="@color/cinza"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="CONFIRMAR SENHA"
                android:textColor="@color/azul_projeto"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSenha2Cadastro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:backgroundTint="@color/branco"
                android:ems="10"
                android:hint="*************"
                android:inputType="textPassword"
                android:textColor="@color/branco"
                android:textColorHint="@color/cinza"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btCadastrar"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_padrao"
                android:text="CADASTRAR"
                android:textColor="@color/branco"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>